{% extends "base.html.twig" %}

{% block body %}

	<div style="height: 100%; display: grid; place-items: center;">
		<div style="width: 100%; max-width: 550px;" class="shadow p-4 bg-light rounded">
			<div style="width: 100%; aspect-ratio: 16/9; overflow: hidden; margin-top: 20px;">
				<img src="{{imagePath}}" style="width: 100%; height: 100%; object-fit: cover;">
			</div>

			<form class="mt-4" method="POST">
				{% for index, flash_error in app.flashes('error') %}
					{% if index == 0 %}
						<div class="alert alert-danger" role="alert">
							{{flash_error}}
						</div>
					{% endif %}
				{% endfor %}

				<div class="mb-3">
					<label for="comment" class="form-label">Commentaire</label>
					<input type="text" name="comment" class="form-control" id="comment" value="{% if comment != null %}{{comment}}{% endif %}">
				</div>

				<button type="submit" class="btn btn-primary">Sauvegarder</button>
				<a href="{{path('app_list')}}" class="btn btn-secondary">Retour</a>
			</form>
		</div>
	</div>

{% endblock %}
