{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('css/centeredElement.css')}}">
{% endblock %}

{% block body %}
	<div id="layout">
		<form method="post" id="container" class="shadow p-4 bg-light rounded">

			<h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<div class="mb-3">
				<label for="inputUsername">Username</label>
				<input type="text" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
			</div>

			<div class="mb-3">
				<label for="inputPassword">Password</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn btn-primary" type="submit">Se connecter</button>
			<a href="{{path('app_list')}}" class="btn btn-secondary">Retour</a>
		</form>
	</div>

{% endblock %}
